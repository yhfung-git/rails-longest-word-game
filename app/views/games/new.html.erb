<div class="container">
  <h1>New game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <div><%=letter %></div>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>

  <form class="form" action="score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters' , @letters %>
    <div class="form-input">
      <input class="form-control" type="text" name="word">
      <input class="btn btn-primary" type="submit" value="Play">
    </div>
  </form>
</div>
